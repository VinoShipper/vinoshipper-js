[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = false

[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
spaces_around_brackets = true
space_before_method_parentheses = true
